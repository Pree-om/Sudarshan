{
  "name": "sudrashan-ai",
  "version": "2.0.0",
  "description": "Enterprise AI Misinformation Detection Platform",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:integration": "jest tests/integration.test.js",
    "test:watch": "jest --watch",
    "lint": "eslint backend/**/*.js",
    "lint:fix": "eslint backend/**/*.js --fix",
    "format": "prettier --write \"backend/**/*.js\"",
    "build": "docker build -t sudrashan:latest .",
    "deploy": "docker-compose up -d",
    "deploy:k8s": "kubectl apply -f kubernetes/",
    "security-audit": "npm audit --audit-level=moderate",
    "security:snyk": "snyk test",
    "db:migrate": "node -e 'require(\"./backend/database\").initDB().then(() => process.exit(0))'",
    "agent-test": "node -e 'const Agent = require(\"./backend/langgraph-agent\"); new Agent().analyze(\"Test content\").then(console.log).catch(console.error)'",
    "logs": "docker-compose logs -f",
    "health": "curl http://localhost:3000/health"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "@sentry/node": "^7.77.0",
    "joi": "^17.11.0",
    "stripe": "^14.5.0",
    "openai": "^4.20.1",
    "@langchain/langgraph": "^0.0.19",
    "@langchain/openai": "^0.0.28",
    "@langchain/google-genai": "^0.0.15",
    "@langchain/core": "^0.1.52",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "snyk": "^1.1244.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}