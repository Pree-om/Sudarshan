# Production Environment Variables
NODE_ENV=production
API_BASE_URL=https://api.sudrashan.com
DATABASE_URL=postgresql://user:pass@prod-db:5432/sudrashan
REDIS_URL=redis://prod-redis:6379

# API Keys (Use AWS Secrets Manager in production)
OPENAI_API_KEY=${AWS_SECRET:openai_key}
GEMINI_API_KEY=${AWS_SECRET:gemini_key}
PERPLEXITY_API_KEY=${AWS_SECRET:perplexity_key}
GROQ_API_KEY=${AWS_SECRET:groq_key}
NEWS_API_KEY=${AWS_SECRET:news_api_key}

# Security
JWT_SECRET=${AWS_SECRET:jwt_secret}
ENCRYPTION_KEY=${AWS_SECRET:encryption_key}
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring
SENTRY_DSN=${AWS_SECRET:sentry_dsn}
DATADOG_API_KEY=${AWS_SECRET:datadog_key}